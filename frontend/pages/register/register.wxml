<view class="page page-register">

  <view class="content">
    <view wx:if="{{!isOnline}}" class="network-banner">当前无网络，无法注册</view>

    <view class="header">
      <text class="title">注册绑定</text>
      <view class="title-line"></view>
    </view>

    <t-cell-group class="card">
      <view class="info-row">
        <text class="label">微信身份</text>
        <t-tag theme="primary" variant="light" class="tag">{{wxIdentity ? '已识别' : '未获取'}}</t-tag>
      </view>
      <view class="divider"></view>
      <t-input class="input" placeholder="学号" value="{{studentId}}" bindchange="onInputStudent" />
      <text class="field-hint">学号支持字母/数字/_/-，长度 4-32</text>
      <t-input class="input" placeholder="姓名" value="{{name}}" bindchange="onInputName" />
      <text class="field-hint">姓名不能为空，最长 64 个字符</text>
      <t-input class="input" placeholder="学院/部门（选填）" value="{{department}}" bindchange="onInputDepartment" />
      <t-input class="input" placeholder="社团/组织（选填）" value="{{club}}" bindchange="onInputClub" />
      <view class="btn-center">
        <t-button theme="primary" class="btn-primary" loading="{{submitting}}" disabled="{{!isOnline || submitting}}" bindtap="onSubmit">
          {{submitting ? '提交中...' : '完成绑定'}}
        </t-button>
      </view>
    </t-cell-group>
  </view>

</view>
