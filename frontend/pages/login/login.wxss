/** login.wxss **/
.login-page {
  min-height: 100vh;
  /* 使用全局背景或稍微暗一点的 */
  background: var(--bg-dark);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 登录页背景光晕 */
.login-page::before {
  content: "";
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, var(--bg-gradient-1), transparent 70%);
  filter: blur(80px);
  opacity: 0.5;
  z-index: 0;
}

.login-page::after {
  content: "";
  position: absolute;
  bottom: -100rpx;
  left: -100rpx;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, var(--bg-gradient-2), transparent 70%);
  filter: blur(80px);
  opacity: 0.4;
  z-index: 0;
}

.panel {
  width: 100%;
  max-width: 640rpx;
  background: var(--glass-bg);
  backdrop-filter: blur(24px);
  -webkit-backdrop-filter: blur(24px);
  border-radius: 32rpx;
  padding: 60rpx 48rpx;
  box-sizing: border-box;
  border: 1px solid var(--glass-border);
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.4);
  z-index: 1;
  transform: translateY(-40rpx);
}

.title {
  color: var(--text-main);
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1.4;
  margin-bottom: 16rpx;
  text-align: center;
}

.desc {
  margin-top: 20rpx;
  color: var(--text-secondary);
  font-size: 28rpx;
  line-height: 1.6;
  text-align: center;
}

.desc.error {
  color: var(--danger);
  background: rgba(239, 68, 68, 0.1);
  padding: 16rpx;
  border-radius: 12rpx;
  border: 1px solid rgba(239, 68, 68, 0.2);
}

.retry-button {
  margin-top: 48rpx;
  width: 100% !important;
  border-radius: 100px !important;
  background: linear-gradient(135deg, var(--primary), #4f46e5) !important;
  font-weight: 600;
}
