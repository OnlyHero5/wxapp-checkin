.page-activities .subtitle {
  margin-bottom: 6rpx;
}

.overview-card {
  margin-bottom: 22rpx;
  padding: 16rpx 10rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
  background: linear-gradient(120deg, rgba(31, 48, 76, 0.45), rgba(16, 26, 39, 0.85));
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.26);
  display: flex;
  align-items: center;
}

.overview-item {
  flex: 1;
  text-align: center;
}

.overview-value {
  display: block;
  font-size: 42rpx;
  line-height: 1.15;
  font-weight: 700;
  color: var(--text);
}

.overview-label {
  display: block;
  margin-top: 4rpx;
  font-size: 22rpx;
  color: var(--muted);
}

.overview-divider {
  width: 1rpx;
  height: 56rpx;
  background: rgba(148, 163, 184, 0.24);
}

.activity-section {
  margin-bottom: 30rpx;
}

.activity-section:last-child {
  margin-bottom: 0;
}

.section-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 6rpx 6rpx 14rpx;
  gap: 12rpx;
}

.section-title-wrap {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text);
}

.section-subtitle {
  font-size: 22rpx;
  color: var(--muted);
}

.activity-card {
  padding: 24rpx 24rpx 20rpx;
  border-radius: 24rpx;
  background: radial-gradient(circle at 95% 0%, rgba(63, 111, 209, 0.16), transparent 42%),
    linear-gradient(180deg, rgba(19, 28, 40, 0.96), rgba(13, 20, 29, 0.98));
  border: 1rpx solid rgba(148, 163, 184, 0.18);
  box-shadow: 0 14rpx 24rpx rgba(0, 0, 0, 0.24);
  margin-bottom: 16rpx;
}

.activity-card.activity-card-ongoing {
  background: radial-gradient(circle at 95% 0%, rgba(83, 162, 255, 0.22), transparent 44%),
    linear-gradient(180deg, rgba(18, 30, 49, 0.96), rgba(12, 21, 33, 0.99));
  border-color: rgba(115, 174, 255, 0.24);
}

.activity-card.activity-card-completed {
  background: radial-gradient(circle at 95% 0%, rgba(156, 171, 196, 0.14), transparent 44%),
    linear-gradient(180deg, rgba(16, 24, 34, 0.97), rgba(12, 19, 28, 0.99));
  border-color: rgba(148, 163, 184, 0.2);
}

.activity-card:last-child {
  margin-bottom: 0;
}

.activity-head {
  display: block;
}

.activity-title-wrap {
  min-width: 0;
}

.activity-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text);
  line-height: 1.3;
  letter-spacing: 0.4rpx;
  word-break: break-word;
}

.activity-type {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(148, 163, 184, 0.12);
  border: 1rpx solid rgba(148, 163, 184, 0.22);
  font-size: 22rpx;
  font-weight: 600;
  color: rgba(231, 237, 245, 0.9);
}

.activity-type.activity-type-default {
  background: linear-gradient(135deg, rgba(148, 163, 184, 0.2), rgba(100, 116, 139, 0.22));
  border-color: rgba(148, 163, 184, 0.34);
}

.activity-type.activity-type-roadshow {
  background: linear-gradient(135deg, rgba(52, 211, 153, 0.2), rgba(16, 185, 129, 0.24));
  border-color: rgba(52, 211, 153, 0.36);
  color: #d1fae5;
}

.activity-type.activity-type-competition {
  background: linear-gradient(135deg, rgba(244, 114, 182, 0.2), rgba(239, 68, 68, 0.24));
  border-color: rgba(244, 114, 182, 0.36);
  color: #ffe4f1;
}

.activity-type.activity-type-workshop {
  background: linear-gradient(135deg, rgba(34, 211, 238, 0.2), rgba(6, 182, 212, 0.24));
  border-color: rgba(34, 211, 238, 0.34);
  color: #d9fafe;
}

.activity-type.activity-type-forum {
  background: linear-gradient(135deg, rgba(251, 146, 60, 0.2), rgba(249, 115, 22, 0.24));
  border-color: rgba(251, 146, 60, 0.34);
  color: #ffedd5;
}

.activity-type.activity-type-lecture {
  background: linear-gradient(135deg, rgba(96, 165, 250, 0.2), rgba(59, 130, 246, 0.24));
  border-color: rgba(96, 165, 250, 0.35);
  color: #dbeafe;
}

.activity-type.activity-type-training {
  background: linear-gradient(135deg, rgba(250, 204, 21, 0.2), rgba(234, 179, 8, 0.24));
  border-color: rgba(250, 204, 21, 0.34);
  color: #fef9c3;
}

.activity-type.activity-type-community {
  background: linear-gradient(135deg, rgba(129, 140, 248, 0.2), rgba(99, 102, 241, 0.24));
  border-color: rgba(129, 140, 248, 0.34);
  color: #e0e7ff;
}

.activity-type.activity-type-expo {
  background: linear-gradient(135deg, rgba(167, 139, 250, 0.2), rgba(139, 92, 246, 0.24));
  border-color: rgba(167, 139, 250, 0.34);
  color: #ede9fe;
}

.activity-tag-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 10rpx;
  flex-wrap: wrap;
}

.activity-meta-grid {
  margin-top: 18rpx;
  border-top: 1rpx solid rgba(148, 163, 184, 0.16);
  padding-top: 14rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  gap: 16rpx;
}

.meta-item:last-child {
  margin-bottom: 0;
}

.meta-label {
  color: rgba(231, 237, 245, 0.6);
  font-size: 22rpx;
}

.meta-value {
  color: var(--text);
  font-size: 24rpx;
  font-weight: 500;
  text-align: right;
  flex: 1;
}

.activity-actions {
  margin-top: 18rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(148, 163, 184, 0.14);
}

.actions-grid {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.activity-actions .action-btn {
  flex: 1 1 160rpx;
  min-height: 66rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
  letter-spacing: 1rpx;
}

.activity-actions .action-btn.action-btn-detail {
  background: rgba(231, 237, 245, 0.08);
  border-color: rgba(231, 237, 245, 0.2);
  color: rgba(231, 237, 245, 0.92);
}
