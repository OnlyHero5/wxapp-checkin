.profile-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 1rpx solid rgba(101, 240, 194, 0.5);
  background: radial-gradient(circle at 30% 30%, rgba(101, 240, 194, 0.25), rgba(15, 23, 42, 0.9));
}

.profile-info {
  display: flex;
  flex-direction: column;
}

.profile-name {
  font-size: 30rpx;
  font-weight: 600;
}

.profile-meta {
  font-size: 22rpx;
  color: var(--muted);
  margin-top: 6rpx;
}
